{
  "compilerOptions": {
    /* Core */
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": true,
    /* Environment */
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "types": [
      "vite/client"
    ],
    /* Interop */
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowImportingTsExtensions": false,
    /* Paths & Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "client/src/*"
      ]
    }
  },
  "include": [
    "client/src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}